<resources>
    <!-- Base application theme. -->
    <style name="Theme.Lemaitre2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSurface">#fff</item>
        
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Customize your theme here. -->
<!--        <item name="buttonStyle">@style/Lemaitre2.Button</item>-->
<!--        <item name="imageButtonStyle">@style/Lemaitre2.ImageButton</item>-->
    </style>

    <style name="Theme.Lemaitre2.Translucent" parent="Theme.Lemaitre2">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
