<resources>
    <!-- Base application theme. -->
    <style name="Theme.Lemaitre2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorSurface">#fff</item>
        
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Theme.Lemaitre2.Switch</item>
    </style>

    <style name="Theme.Lemaitre2.Translucent" parent="Theme.Lemaitre2">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- STYLES -->
    
    <style name="Theme.Lemaitre2.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    
    <style name="Theme.Lemaitre2.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    
    <style name="Theme.Lemaitre2.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>